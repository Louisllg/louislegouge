// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Chat {
  id           String      @id @default(cuid())
  title        String
  systemPrompt String      @default("")
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  messages     Message[]
  preferences  Preference?
}

model Message {
  id        String   @id @default(cuid())
  role      String // 'user' | 'assistant' | 'system'
  content   String
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
  chatId    String
  createdAt DateTime @default(now())
}

model Preference {
  id        String   @id @default(cuid())
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
  chatId    String   @unique
  size      String // small | medium | large
  housing   String // apartment | house | garden
  allergies String // comma-separated allergens
  activity  String // low | medium | high
  updatedAt DateTime @updatedAt
}

model AnimalProfile {
  id             String   @id @default(cuid())
  species        String
  breed          String?
  name           String
  ageMonths      Int
  sex            String? // male | female
  size           String
  goodWithKids   Boolean  @default(false)
  goodWithPets   Boolean  @default(false)
  hypoallergenic Boolean  @default(false)
  energyLevel    String // low | medium | high
  description    String
  imageUrl       String?
  createdAt      DateTime @default(now())
}
